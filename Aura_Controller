    <script>
        // REPLACE WITH YOUR FIREBASE CONFIG
        const firebaseConfig = {
            apiKey: "YOUR_API_KEY",
            databaseURL: "YOUR_DATABASE_URL",
            projectId: "YOUR_PROJECT_ID",
        };

        firebase.initializeApp(firebaseConfig);
        const db = firebase.database();

        // Update Slider Values to Firebase
        function updateVal(part, val) {
            document.getElementById(part.charAt(0) + 'Val').innerText = val;
            db.ref('aura/motors/' + part).set(parseInt(val));
        }

        // Send Expression
        function sendEmotion(type) {
            db.ref('aura/expression').set(type);
        }

        // Listen for Battery from ESP32
        db.ref('aura/battery').on('value', (snapshot) => {
            document.getElementById('battVal').innerText = snapshot.val();
        });
    </script>
